{
  "name": "nanoevents",
  "version": "8.0.0",
  "description": "Simple and tiny (130 bytes) event emitter library",
  "keywords": [
    "EventEmitter",
    "Events",
    "emit",
    "emitter",
    "event",
    "pub/sub",
    "publish",
    "reactor",
    "subscribe"
  ],
  "scripts": {
    "unit": "tsm ./node_modules/uvu/bin.js . '\\.test\\.(ts|js)$'",
    "test": "c8 pnpm unit && eslint . && check-dts && size-limit"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/nanoevents",
  "engines": {
    "node": "^16.0.0 || ^18.0.0 || >=20.0.0"
  },
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "devDependencies": {
    "@logux/eslint-config": "^51.0.0",
    "@size-limit/preset-small-lib": "^8.2.6",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "benchmark": "^2.1.4",
    "c8": "^8.0.0",
    "check-dts": "^0.7.2",
    "clean-publish": "^4.2.0",
    "eslint": "^8.44.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "size-limit": "^8.2.6",
    "tsm": "^2.3.0",
    "typescript": "^5.1.6",
    "uvu": "^0.5.6"
  },
  "size-limit": [
    {
      "import": "{ createNanoEvents }",
      "limit": "130 B"
    }
  ],
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "c8": {
    "exclude": [
      "**/*.test.*",
      "test/*"
    ],
    "lines": 100,
    "check-coverage": true,
    "reporter": [
      "text",
      "lcov"
    ],
    "skip-full": true,
    "clean": true
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "clean-publish": {
    "cleanDocs": true
  }
}
