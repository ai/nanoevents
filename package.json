{
  "name": "nanoevents",
  "version": "9.0.0",
  "description": "Simple and tiny (107 bytes) event emitter library",
  "keywords": [
    "EventEmitter",
    "Events",
    "emit",
    "emitter",
    "event",
    "pub/sub",
    "publish",
    "reactor",
    "subscribe"
  ],
  "scripts": {
    "test:coverage": "c8 pnpm bnt",
    "test:lint": "eslint .",
    "test:types": "check-dts",
    "test:size": "size-limit",
    "test": "pnpm run /^test:/"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/nanoevents",
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "devDependencies": {
    "@logux/eslint-config": "^53.4.0",
    "@size-limit/preset-small-lib": "^11.1.6",
    "@types/node": "^22.7.5",
    "benchmark": "^2.1.4",
    "better-node-test": "^0.7.1",
    "c8": "^10.1.2",
    "check-dts": "^0.8.2",
    "clean-publish": "^5.0.0",
    "eslint": "^9.12.0",
    "size-limit": "^11.1.6",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "size-limit": [
    {
      "import": "{ createNanoEvents }",
      "limit": "108 B"
    }
  ],
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "c8": {
    "exclude": [
      "**/*.test.*",
      "test/*"
    ],
    "lines": 100,
    "check-coverage": true,
    "reporter": [
      "text",
      "lcov"
    ],
    "skip-full": true,
    "clean": true
  },
  "clean-publish": {
    "cleanDocs": true
  }
}
