{
  "name": "nanoevents",
  "version": "4.0.0",
  "description": "Simple and tiny (69 bytes) event emitter library",
  "keywords": [
    "EventEmitter",
    "Events",
    "emit",
    "emitter",
    "event",
    "pub/sub",
    "publish",
    "reactor",
    "subscribe"
  ],
  "scripts": {
    "spell": "yaspeller-ci *.md",
    "clean": "rimraf coverage/",
    "test": "jest --coverage && eslint-ci . && check-dts && size-limit && yarn spell"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/nanoevents",
  "engines": {
    "node": ">=6.0.0"
  },
  "types": "./index.d.ts",
  "devDependencies": {
    "@logux/eslint-config": "^36.0.0",
    "@logux/sharec-config": "^0.5.7",
    "@size-limit/preset-small-lib": "^4.0.2",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.4",
    "check-dts": "^0.1.2",
    "dual-publish": "^0.2.0",
    "eslint": "^6.8.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.7.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^16.1.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "rimraf": "^3.0.2",
    "size-limit": "^4.0.2",
    "typedoc": "^0.16.10",
    "yaspeller-ci": "^1.0.2"
  },
  "size-limit": [
    {
      "path": "index.js",
      "limit": "69 B"
    }
  ],
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config"
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "gzipped",
      "EventEmitter",
      "js",
      "ES",
      "CDN",
      "npm",
      "JSDoc",
      "JS"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.5.7"
  }
}
